{% extends 'layout.html.twig' %} {% block title %} {{ parent() }} - Inscription {%
endblock %} {% block content %}
<div class="row mt-5 justify-content-center text-center">
  <h1 class="text-info ">Liste des inscrits</h1>

  <table class="table table-striped m-5">
  <thead>
    <tr>
      <th scope="col">Nom</th>
      <th scope="col">Prénom</th>
      <th scope="col">Date de naissance</th>
      <th scope="col">Biographie</th>
    </tr>
  </thead>
  <tbody>
      {% for auteur in allAuteurs %}
    <tr>
      <th scope="row">{{ auteur.nom}}</th>
      <td>{{ auteur.prenom}}</td>
      <td>{{ auteur.dateDeNaissance | date("d/m/Y")}}</td>
      <td>{{ auteur.biographie | slice(0,50)}}</td>
      <td>
          <a href="{{ path("auteur", {id:auteur.id})}}"><i class="fas fa-solid fa-circle-question mx-1 text-warning"></i></a>
          <a href="{{ path("update_auteur", {id:auteur.id})}}"><i class="fas fa-edit mx-1 text-success"></i></a>
          <a href="{{ path("delete_auteur", {id:auteur.id})}}"><i class="fas fa-trash mx-1 text-danger" onclick="return confirm(`Etes vous sûr de vouloir supprimer cet utilisateur? `)"></i></a>
          </td>
    </tr>
    {% endfor %}
  </tbody>
</table>
{% endblock %}
